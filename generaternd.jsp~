<script type="text/javascript">

    function validate()
    {
      
      
	    var x = document.getElementById("rollno").value;
	   

	    if(x=="")
	    {
	      alert("ENTER ROLL NUMBER");
	      
	      return false;
	    }
	    if(x==0)
	    {
              alert("PLEASE ENTER A VALID ROLL NUMBER");
	      return false;

	    }

	    if (isNaN(parseInt(x)))
	    {
                alert("INVALID ROLL NUMBER");
		return false;
	    }

          return true;
    }

 
</script>

